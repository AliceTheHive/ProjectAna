<ContentDialog
    x:Class="ANAConversationSimulator.UserControls.InputContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ANAConversationSimulator.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Configure Chat Server"
    PrimaryButtonText="Ok"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">
    <ScrollViewer>
        <StackPanel>
            <TextBox Text="{Binding UploadFileAPI, Mode=TwoWay}" PlaceholderText="http://[your-ana-chat-server.com]/files" Header="Upload File API" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
